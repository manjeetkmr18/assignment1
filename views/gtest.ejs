<!DOCTYPE html>
<html lang="en">
<%- include('./layouts/header'); -%>

    <body>

        <%- include('./layouts/navbar'); -%>
            <!-- Page Header-->
            <header class="masthead">
                <div class="container position-relative px-4 px-lg-5">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            <div class="page-heading">
                                <h1>G Test</h1>
                                <span class="subheading">Book G Drive Test</span>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Main Content-->
            <main class="mb-4">
                <div class="container g2form-container">
                    <h3>Lisence Number</h3>
                    <form action="/gtest" method="GET">
                        <div class="input-group input-group-lg">
                            <input type="text" class="form-control" aria-label="Large"
                                aria-describedby="inputGroup-sizing-sm" id="licNumber" name="licNumber">
                            <div class="input-group-prepend">
                                <button type="submit" class="input-group-text bg-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
               
                <% if(usermodel !== null){ %>
                <div class="container">

                    <% if( usermodel.firstname !== null){ %>
                        <p>
                        First Name: <%= usermodel.firstname %>
                        </p>
                    <% } %>

                    <% if( usermodel.lastname !==null){ %>
                        <p>
                            Last Name: <%= usermodel.lastname %>
                        </p>
                        <% } %>

                </div>
              
                <% } else { %>
                        
                <div class="container">
                    <p>No User Found</p>
                </div>

                <% } %>


            </main>


            <%- include('./layouts/scripts'); -%>

    </body>

</html>